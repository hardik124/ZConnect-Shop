<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/border"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include layout="@layout/content_coupn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editcoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Edit Coupon button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp" />


        <ImageView
            android:id="@+id/del_coupon"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="Delete Cupon button"
            app:srcCompat="@mipmap/ic_delete_forever_black_24dp" />
    </LinearLayout>


</LinearLayout>
</ScrollView>