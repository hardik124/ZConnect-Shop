<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogo"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="48dp"
    android:weightSum="1"
    tools:context=".UI.Activities.Misc.AddShop">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_marginBottom="30dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:contentDescription="Logo Image" />

        <EditText
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:hint="@string/shop_name"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textColorHint="@color/teal50"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/shopcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:hint="@string/choose_shop_code"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/teal50"
            android:textSize="20dp" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/invalidCharacter"
            android:text="Invalid Character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <Button
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:padding="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border_filled"
            android:text="@string/sign_up"
            android:textColor="@color/teal100"
            android:textSize="16dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>
</LinearLayout>
